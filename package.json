{
    "name": "vscode-path-comment",
    "displayName": "Path Comment",
    "description": "Adds a comment with the file's relative path to the top of each file on save, using the same format as ChatGPT when showing code files.",
    "version": "1.0.0",
    "publisher": "xfanta",
    "engines": {
        "vscode": "^1.50.0"
    },
    "activationEvents": [
        "onWillSaveTextDocument"
    ],
    "main": "./out/extension.js",
    "contributes": {},
    "scripts": {
        "vscode:prepublish": "tsc -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.50.0",
        "typescript": "^4.0.0"
    },
    "dependencies": {
        "vscode": "^1.1.34"
    }
}
